<% provide(:title, @contribution.title) %>

<div class="row">
  <aside class="col_md_4">
    <section class="user_info">
      <h1>
        <%= @contribution.title %> 
      </h1> 
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <p>
      Kategorie: <%= @contribution.category %><br/>
      Gruppe: <%= @contribution.user.group %><br/>
      Beschreibung: <%= @contribution.content %><br/>
    </p>
  </div>
</div>
 
<%= @user.email %>